<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".servicios">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_servprof"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/servprof" />
    <TextView
        android:id="@+id/tv_servprof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="string/db4" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_servgestion"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/servgestion" />
    <TextView
        android:id="@+id/tv_servgestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="string/db5" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_servitec"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/servitec" />

    <TextView
        android:id="@+id/tv_servitec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="string/db6" />
</LinearLayout>
</LinearLayout>