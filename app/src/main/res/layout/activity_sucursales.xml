<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".sucursales">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_bbogota"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/bbogota" />
    <TextView
        android:id="@+id/tv_bbogota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="string/db7" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_cali"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/cali" />
    <TextView
        android:id="@+id/tv_cali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="string/db8" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_medellin"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/medellin" />

    <TextView
        android:id="@+id/tv_medellin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="string/db9" />
</LinearLayout>
</LinearLayout>